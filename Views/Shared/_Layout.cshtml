<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta property="og:title" content="@ViewBag.Language.Title" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://nonstop.patche.me" />
    <meta property="og:image" content="https://nonstop.patche.me/images/ncoding.png" />
    <meta property="og:site_name" content="@ViewBag.Language.Title" />
    <meta property="og:description" content="@ViewBag.Language.Subtitle" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@ViewBag.Language.Title" />
    <meta name="twitter:creator" content="@@0x00000FF" />
    <meta name="twitter:image" content="https://nonstop.patche.me/images/ncoding.png" />
    <meta name="twitter:description" content="@ViewBag.Language.Subtitle" />

    <title>@ViewBag.Language.Title</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" />

    @if (ViewBag.Language is Japanese)
    {
        <link href="https://fonts.googleapis.com/css?family=M+PLUS+Rounded+1c" rel="stylesheet">
        <style>
            h1, h4 {
                font-family: "M Plus Rounded 1c"
            }
        </style>
    }
    <style>
        .repo-description {
            max-width: calc(100% - 110px);
        }
    </style>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="ml-4 mt-3 mb-3 mr-4">
        <ul class="languages list-inline float-right">
            <li class="list-inline-item">
                <a href="/?locale=EN">English</a>
            </li>
            <li class="list-inline-item">
                <a href="/?locale=KR">한국어</a>
            </li>
            <li class="list-inline-item">
                <a href="/?locale=JP">にほんご</a>
            </li>
            <li id="contribution_req" class="list-inline-item">Contribute?</li>
        </ul>
        <h1>@ViewBag.Language.Title</h1>
        <h4>@ViewBag.Language.Subtitle</h4>
    </div>
    <hr />
    <div class="m-auto p-3" style="max-width: 960px">
        @RenderBody()
    </div>
    <hr class="mb-0" />
    <div class="text-right text-light bg-secondary text-secondary p-3 small">
        Nonstop Programming! Campaign by P.Knowledge, 2018 <br />
        Powered by ASP.NET Core by Microsoft and NGiNX Web Server. <br/>
        Server Powered by ConoHa VPS, by GMO Internet Inc. <br />
        Font Awesome by Fonticons, inc.
    </div>
    <script>
            contribution_req.onclick = function () {
                alert("@ViewBag.Language.ContributionMessage");
            };
    </script>
</body>
</html>
